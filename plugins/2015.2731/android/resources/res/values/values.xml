    <style name="teads_Ab.Text" parent="android:Widget.TextView">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="teads_Ab.TitleItem" parent="android:Widget">
        <item name="android:layout_gravity">center_vertical|left</item>
        <item name="android:paddingRight">8dp</item>
    </style>
    <style name="teads_AbButton" parent="android:Widget.ImageButton">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:background">@drawable/teads_button_selector</item>
        <item name="android:padding">@dimen/teads_action_bar_button_padding</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="teads_AbButton.Icon" parent="teads_AbButton">
        <item name="android:paddingTop">@dimen/teads_action_bar_button_padding</item>
        <item name="android:paddingBottom">@dimen/teads_action_bar_button_padding</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingLeft">@dimen/teads_action_bar_button_padding</item>
    </style>
    <style name="teads_AbButton.More" parent="teads_AbButton">
        <item name="android:paddingLeft">0dp</item>
    </style>
    <style name="teads_ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>
    <style name="teads_ButtonBarButton"/>
    <style name="teads_ButtonControl">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/teads_button_horizontal_innerpadding</item>
        <item name="android:paddingRight">@dimen/teads_button_horizontal_innerpadding</item>
        <item name="android:paddingTop">@dimen/teads_button_vertical_innerpadding</item>
        <item name="android:paddingBottom">@dimen/teads_button_vertical_innerpadding</item>
        <item name="android:background">@drawable/teads_button_selector</item>
    </style>
    <style name="teads_NoActionBar" parent="@android:style/Theme.Holo.NoActionBar" ns1:ignore="NewApi">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowTitleSize">0dp</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>
    <style name="teads_VideoProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/teads_progressbar</item>
    </style>
    <style name="teads_call_to_action_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/teads_call_to_action_selector</item>
        <item name="android:padding">5dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="teads_call_to_action_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start|top</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="teads_close_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|top</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">16dp</item>
    </style>
    <style name="teads_countdown">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">0dp</item>
        <item name="android:gravity">top</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="teads_credit">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:textColor">@color/teads_credit_color</item>
        <item name="android:paddingRight">1dp</item>
    </style>
    <style name="teads_end_screen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#B3000000</item>

    </style>
    <style name="teads_end_screen_action_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="teads_end_screen_donut_progress">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>
    <style name="teads_end_screen_replay_button" parent="teads_end_screen_action_button">
        <item name="android:layout_marginBottom">20dp</item>
    </style>
    <style name="teads_frame_layout_creditlabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignLeft">@+id/teads_ad_content</item>
        <item name="android:layout_alignRight">@+id/teads_ad_content</item>

    </style>
    <style name="teads_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/teads_label_color</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
    </style>
    <style name="teads_sound_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|bottom</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">16dp</item>
    </style>
</resources>
