<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:vumeter="http://schemas.android.com/apk/res-auto"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <ImageView
           android:id="@+id/teads_ic_image"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:src="@drawable/ic_teads_sdk_skip_ad"
           android:visibility="gone"/>

       <io.gresse.hugo.vumeterlibrary.VuMeterView
           android:id="@+id/teads_vumeter"
           vumeter:backgroundColor="@android:color/white"
           vumeter:blockNumber="4"
           vumeter:blockSpacing="1dp"
           vumeter:speed="3"
           vumeter:stopSize="2dp"
           android:layout_width="11dp"
           android:layout_height="18dp"
           android:visibility="gone"
           />

</merge>